<div class="jumbotron login">
	<h2 position = "top: 0px"style ="color: white">   Welcome to nanoTwitter! <br> Log in Below, or <a class = "signup-button" href ="/signup">Sign Up Here</a></h3> </h2>
	<form role="form" action="/login">
		<div class="form-group col-md-3">
			<label style ="color:white" for "username">Username</label>
			<input type="user" class = "form-control" name="username" placeholder="Enter Username">
		</div>
		<div class="form-group col-md-3">
			<label style ="color:white" for "password">Password</label>
			<input type="password" class = "form-control" name="password" placeholder="Enter Password">
		</div><br>
		<div class = "form-group ">
			<button type="submit" class="btn btn-default login_button">Log In</button>
		</div>
	</form>
	<h3 class= "forgotPass" style="color: white"> Forgot your password? <a class = "forgotPass-button" href ="/resetpassword">Click Here</a></h3> 
</div>
<% @recent_tweets.each do |tweet| %>
	<div class = "tweet-list">
		<img src=<%= User.find(tweet.user_id).pic %> alt="User's profile picture" style="width:40px;height:40px" >
		<h3><%= User.find(tweet.user_id).username %></h3>
		<p>Posted on <%= tweet.created_at %></p>
		<p><%=tweet.text %></p>
	</div>
<% end %> 