<div class="jumbotron register">
	<h1 position = "top: 0px"style = "color:#01C9F5" class = "forgot-header">   Sign Up! </h1>
	<h2 style = "color:#01C9F5">Become a Leader~</h2>
	<form role="form" action="/register" method="POST">
		<div class="form-group signup-form">
			<label style ="color:blue" for "name">Name</label>
			<input class="form-control" placeholder="Enter your name" name="name" type="text">
		</div>
		<div class="form-group signup-form">
			<label style ="color:blue" for "uName">Username(No spaces) </label>
			<input class="form-control" placeholder="Enter a username" name="uName"type="text">
		</div>
		<div class="form-group signup-form-large">
			<label style ="color:blue" for "pass">Password</label>
			<input type = "password" class="form-control" placeholder="Enter a password" name="pass" type="text">
		</div>
		<div class="form-group signup-form-large">
			<label style ="color:blue" for "cPass">Confirm Password</label>
			<input type = "password" class="form-control" placeholder="Confirm your password" name="cPass" type="text">
		</div>
		<div class="form-group signup-form-large">
			<label style ="color:blue" for "email">Email Address</label>
			<input class="form-control" placeholder="Enter your email address" name="email" type="text">
		</div>
			<div class = "form-group ">
				<button type="submit" class="btn btn-default signup_button">Sign Up</button>
			</div>
		</div>
	</form>
</div>


